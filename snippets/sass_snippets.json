{
  "@forward": {
    "prefix": "_fw",
    "body": "@forward ${1:filePath};",
    "description": "@forward 'file'"
  },
  "calc": {
    "prefix": "_clc",
    "body": "calc($1);",
    "description": "calc()"
  },
    "function px to em": {
      "prefix": "_funcem",
      "body": [
        "@function rem($pixels, $context: ${1:16}){",
        "@return ($pixels/$context)em;",
        "}"
      ],
      "description": "function to convert px to em"
    },
    "px to em": {
      "prefix": "_em",
      "body": "em($1)",
      "description": "use the em function"
    },
    "function px to rem": {
      "prefix": "_funcrem",
      "body": [
        "@function rem($pixels, $context: 16){",
        "@return ($pixels/$context) * 1rem;",
        "}"
      ],
      "description": "function to convert px to rem"
    },
    "px to rem": {
      "prefix": "_rem",
      "body": "rem($1);",
      "description": "use the rem function"
    },
    "@import": {
      "prefix": "_imp",
      "body": "@import ${1:filePath};",
      "description": "import a file"
    },
    
    "breakpoints": {
      "prefix": "_brpt",
      "body": [
        "$$breakpoints: (",
        "  \"mini\": \"480px\",",
        "  \"small\": \"700px\",",
        "  \"menu\": \"1000\",",
        "  \"big\": \"1 240px\",",
        "  \"bigger\": \"1366px\",",
        "  \"huge\": \"1440px\",",
        ");"
      ],
      "description": "creates default breakpoint map"
    },
}